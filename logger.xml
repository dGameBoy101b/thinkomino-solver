<?xml version="1.0" encoding="UTF-8"?>
<logger>
	<version>1</version>
	<formatters>
		<default>
			<format>[%(asctime)s] %(filename)s.%(funcName)s:%(lineno)d %(levelname)s: %(message)s</format>
			<datefmt>%Y-%m-%d %H:%M:%S.uuu</datefmt>
			<style>%</style>
		</default>
	</formatters>
	<handlers>
		<debug_file>
			<class>logging.FileHandler</class>
			<formatter>default</formatter>
			<level>DEBUG</level>
			<filename>debug_log.log</filename>
		</debug_file>
		<info_console>
			<class>logging.StreamHandler</class>
			<formatter>default</formatter>
			<level>INFO</level>
			<stream>sys.stdout</stream>
		</info_console>
		<error_console>
			<class>logging.StreamHandler</class>
			<formatter>default</formatter>
			<level>ERROR</level>
			<stream>sys.stderr</stream>
		</error_console>
	</handlers>
	<root>
		<handlers>
			<debug_file/>
			<info_console/>
			<error_console/>
		</handlers>
	</root>
</logger>
